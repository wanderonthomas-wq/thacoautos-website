class Search {
    constructor() {
        this.events()
    }
    events() {
        this.handleLogicChooseModel()
        this.handleFillterYear()
        this.handleFillterMonth()
        this.handleFillterTime()
        this.handleFilterFieldActivity();
    }
    handleLogicChooseModel() {
        const element = $('.filter-list input[type="radio"]')
        if (!!element) {
            element.on('change', function(e) {

                try {
                    $('.form-search').submit()
                } catch (error) {
                    console.log('error: ', error);
                }
            })
        }
    }
    handleFillterYear() {
        const elementYear = $('#search-year-dt');
